<form method='POST'>
  <label for='input-name'>Your Username</label>
  <input
    id='input-name'
    type='text'
    name='name'
    placeholder='Your Username'
    required
  />

  <label for='input-password'>Password</label>
  <input
    id='input-password'
    type='password'
    name='password'
    placeholder='Password'
    required
    minlength='5'
  />

  <button>Register</button>
</form>